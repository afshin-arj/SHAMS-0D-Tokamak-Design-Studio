{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SHAMS Decision Consequences",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "schema_version": {
      "const": "decision_consequences.v1"
    },
    "decision_posture": {
      "type": "string"
    },
    "primary_risk_driver": {
      "type": "string"
    },
    "dominant_mechanism": {
      "type": "string"
    },
    "dominant_constraint": {
      "type": "string"
    },
    "worst_hard_margin_frac": {
      "type": [
        "number",
        "null"
      ]
    },
    "leverage_knobs": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "uncertainty_reduction_axis": {
      "type": "string"
    },
    "narrative": {
      "type": "string"
    },
    "stamp_sha256": {
      "type": "string"
    }
  },
  "required": [
    "schema_version",
    "decision_posture",
    "primary_risk_driver",
    "dominant_mechanism",
    "dominant_constraint",
    "leverage_knobs",
    "uncertainty_reduction_axis",
    "narrative",
    "stamp_sha256"
  ]
}
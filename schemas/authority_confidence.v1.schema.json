{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SHAMS Authority Confidence Ledger (v1)",
  "type": "object",
  "required": ["schema_version", "design", "subsystems"],
  "properties": {
    "schema_version": {"const": "authority_confidence.v1"},
    "design": {
      "type": "object",
      "required": ["design_confidence_class"],
      "properties": {
        "design_confidence_class": {"type": "string"},
        "aggregate_strategy": {"type": "string"},
        "involved_subsystems": {"type": "array", "items": {"type": "string"}},
        "worst_class_subsystems": {"type": "array", "items": {"type": "string"}},
        "near_binding_constraints": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": true
    },
    "subsystems": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["subsystem", "confidence_class", "authority_tier", "maturity", "involved", "rationale"],
        "properties": {
          "subsystem": {"type": "string"},
          "confidence_class": {"type": "string"},
          "authority_tier": {"type": "string"},
          "maturity": {"type": "string"},
          "involved": {"type": "boolean"},
          "rationale": {"type": "string"}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
